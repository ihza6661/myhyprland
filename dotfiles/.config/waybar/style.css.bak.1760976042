@import "./colors.css";
/* @import "../omarchy/current/theme/waybar.css"; */

* {
  border: none;
  border-radius: 0;
  min-height: 0;
  font-family: SF Pro Text;
  font-size: 12px;
  font-weight: bold;
}

window#waybar {
  padding: 20px 28px;
  background-color: @blur_background8;
  color: @on_background;
  transition-property: background-color;
  transition-duration: 0.5s;
}

.modules-left {
  margin-left: 8px;
}

.modules-right {
  margin-right: 8px;
}

#workspaces button {
  all: initial;
  padding: 0 6px;
  margin: 0 1.5px;
  min-width: 9px;
}

#workspaces button.empty {
  opacity: 0.5;
}

#tray,
#cpu,
#battery,
#network,
#bluetooth,
#pulseaudio,
#custom-omarchy,
#custom-screenrecording-indicator,
#custom-update,
#custom-netspeed,
#custom-power_profile,
#custom-scratchpad,
#custom-browser,
#custom-whatsapp,
#custom-instagram,
#custom-video {
  min-width: 12px;
  margin: 0 7.5px;
}

#custom-expand-icon {
  margin-right: 7px;
}

tooltip {
  padding: 2px;
}

#custom-update {
  font-size: 10px;
}

#clock {
  margin-left: 8.75px;
}

.hidden {
  opacity: 0;
}

#custom-screenrecording-indicator {
  min-width: 12px;
  margin-left: 8.75px;
  font-size: 10px;
}

#custom-screenrecording-indicator.active {
  color: #a55555;
}

#workspaces button.active {
  color: @primary;
}
